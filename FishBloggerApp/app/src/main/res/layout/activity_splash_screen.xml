<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity"
    android:background="#fece2f">

    <ImageView
        android:layout_marginTop="80dp"
        android:id="@+id/FishLogo"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:paddingLeft="10dp"
        android:paddingTop="100dp"
        android:paddingRight="10dp"
        android:paddingBottom="100dp"
        android:src="@drawable/fishsplashlogo" />

    <TextView
        android:id="@+id/BloggerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FishLogo"
        android:layout_marginTop="-100dp"
        android:fontFamily="@font/aclonica"
        android:paddingLeft="5dp"
        android:text="Aquarium Fish Blog"
        android:textAlignment="center"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/Privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BloggerName"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/antic"
        android:paddingRight="2dp"
        android:text="Â© 2020 Created By Mevan All rights reserved.  "
        android:textAlignment="viewEnd"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="377dp"
        android:layout_height="46dp"
        android:layout_below="@+id/Privacy"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>